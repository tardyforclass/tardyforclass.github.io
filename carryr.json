{
  "$jason": {
    "head": {
      "title": "Jasonbase",
      "actions": {
        "visit": [
          {
            "{{#if /\\/edit/.test($jason.url)}}": {
              "type": "$href",
              "options": {
                "url": "{{$jason.url.replace('/edit', '')}}",
                "preload": {
                  "background": "#ffffff"
                }
              }
            }
          },
          {
            "{{#else}}": {
              "type": "$default"
            }
          }
        ]
      }
    },
    "body": {
      "header": {
	"menu": {
		"text": "Pay With Card",
		"style": {
            "color": "#0000ff",
            "font": "HelveticaNeue-Bold",
            "size": "17"
          },
          "href": {
            "url": "https://pay.google.com/payments/u/0/home#sendRequestMoney",
            "view": "web"
          },
          "badge": {
            "text": "4",
            "style": {
              "background": "#ff0000",
              "color": "#ffffff"
            }
          }
 
	}
},
	    "footer":{
		    "text":"test"
	    },
      "background": {
        "type": "html",
        "url": "https://vkprakash.github.io/carryr/index.html",
        "action": {
          "trigger": "visit"
        }
      }
    }
  }
}

{
  "$jason": {
    "head": {
      "title": "Jasonbase",
      "actions": {
        "visit": [
          {
            "{{#if /\\/edit/.test($jason.url)}}": {
              "type": "$href",
              "options": {
                "url": "{{$jason.url.replace('/edit', '')}}",
                "preload": {
                  "background": "#ffffff"
                }
              }
            }
          },
          {
            "{{#else}}": {
              "type": "$default"
            }
          }
        ]
      }
    },
    "body": {
      "header":{
        "type": "label",
  "text": "Open a browser",
  "href": {
    "url": "https://www.twitter.com/gliechtenstein",
    "view": "web"
  }
}
},
      "background": {
        "type": "html",
        "url": "https://www.jasonbase.com",
        "action": {
          "trigger": "visit"
        }
      }
    }
  }
}

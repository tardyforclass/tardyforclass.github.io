{
  "$jason": {
    "head": {
      "title": "Jasonbase",
      "actions": {
        "visit": [
          {
            "{{#if /\\/edit/.test($jason.url)}}": {
              "type": "$href",
              "options": {
                "url": "{{$jason.url.replace('/edit', '')}}",
                "preload": {
                  "background": "#ffffff"
                }
              }
            }
          },
          {
            "{{#else}}": {
              "type": "$default"
            }
          }
        ]
      }
    },
    "body": {
       "header": {
       
        "menu": {
          "text": "Pay With Card",
          
        "style": {
          "color": "#44D457",
         
          "font": "Times New Roman-Bold",
          "size": "17"
        },
          "href": {
            "url": "https://pay.google.com/payments/u/0/home#sendRequestMoney",
            "view": "web"
          }
        }
      },
      "background": {
        "type": "html",
        "url": "http://vkprakash.github.io/carryr/",
        "action": {
          "trigger": "visit"
        }
      }
    }
  }
}
